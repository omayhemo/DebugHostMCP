{
  "$schema": "./schemas/config.schema.json",
  "version": "1.0.0",
  "environment": "{{ENVIRONMENT}}",
  "server": {
    "port": "{{PORT}}",
    "host": "{{HOST}}",
    "protocol": "{{PROTOCOL}}",
    "maxRequestSize": "{{MAX_REQUEST_SIZE}}",
    "requestTimeout": "{{REQUEST_TIMEOUT}}",
    "keepAliveTimeout": "{{KEEP_ALIVE_TIMEOUT}}"
  },
  "security": {
    "apiKey": "{{API_KEY}}",
    "allowedOrigins": "{{ALLOWED_ORIGINS}}",
    "enableCors": "{{ENABLE_CORS}}",
    "rateLimiting": {
      "enabled": "{{RATE_LIMIT_ENABLED}}",
      "windowMs": "{{RATE_LIMIT_WINDOW}}",
      "maxRequests": "{{RATE_LIMIT_MAX_REQUESTS}}"
    },
    "auth": {
      "enabled": "{{AUTH_ENABLED}}",
      "tokenExpiry": "{{TOKEN_EXPIRY}}",
      "refreshTokenExpiry": "{{REFRESH_TOKEN_EXPIRY}}"
    }
  },
  "storage": {
    "logs": {
      "path": "{{LOG_DIR}}",
      "maxSize": "{{MAX_LOG_SIZE}}",
      "maxFiles": "{{MAX_LOG_FILES}}",
      "rotation": "{{LOG_ROTATION}}",
      "retention": "{{LOG_RETENTION}}",
      "compression": "{{LOG_COMPRESSION}}",
      "format": "{{LOG_FORMAT}}"
    },
    "sessions": {
      "path": "{{SESSION_DIR}}",
      "maxSize": "{{MAX_SESSION_SIZE}}",
      "cleanup": "{{SESSION_CLEANUP_INTERVAL}}"
    },
    "cache": {
      "enabled": "{{CACHE_ENABLED}}",
      "path": "{{CACHE_DIR}}",
      "maxSize": "{{CACHE_MAX_SIZE}}",
      "ttl": "{{CACHE_TTL}}"
    }
  },
  "processes": {
    "maxConcurrent": "{{MAX_CONCURRENT_PROCESSES}}",
    "defaultTimeout": "{{PROCESS_TIMEOUT}}",
    "autoRestart": "{{AUTO_RESTART}}",
    "restartDelay": "{{RESTART_DELAY}}",
    "maxRestarts": "{{MAX_RESTARTS}}",
    "killSignal": "{{KILL_SIGNAL}}",
    "killTimeout": "{{KILL_TIMEOUT}}",
    "memoryLimit": "{{MEMORY_LIMIT}}",
    "cpuLimit": "{{CPU_LIMIT}}",
    "priority": "{{PROCESS_PRIORITY}}"
  },
  "monitoring": {
    "enabled": "{{MONITORING_ENABLED}}",
    "metricsInterval": "{{METRICS_INTERVAL}}",
    "healthCheck": {
      "enabled": "{{HEALTH_CHECK_ENABLED}}",
      "interval": "{{HEALTH_CHECK_INTERVAL}}",
      "timeout": "{{HEALTH_CHECK_TIMEOUT}}"
    },
    "alerts": {
      "enabled": "{{ALERTS_ENABLED}}",
      "memory": {
        "threshold": "{{MEMORY_ALERT_THRESHOLD}}",
        "action": "{{MEMORY_ALERT_ACTION}"
      },
      "cpu": {
        "threshold": "{{CPU_ALERT_THRESHOLD}}",
        "action": "{{CPU_ALERT_ACTION}"
      },
      "disk": {
        "threshold": "{{DISK_ALERT_THRESHOLD}}",
        "action": "{{DISK_ALERT_ACTION}"
      }
    }
  },
  "detection": {
    "enabled": "{{DETECTION_ENABLED}}",
    "scanDepth": "{{SCAN_DEPTH}}",
    "cacheResults": "{{CACHE_DETECTION_RESULTS}}",
    "frameworks": [
      "nextjs",
      "react",
      "vue",
      "angular",
      "svelte",
      "nuxt",
      "gatsby",
      "express",
      "fastify",
      "koa",
      "django",
      "flask",
      "fastapi",
      "laravel",
      "symfony",
      "rails",
      "sinatra",
      "spring",
      "quarkus",
      "gin",
      "fiber",
      "actix",
      "rocket",
      "phoenix",
      "asp.net"
    ],
    "customPatterns": {
      "server_ready": [
        "listening on",
        "server started",
        "ready on",
        "compiled successfully",
        "webpack compiled",
        "vite.*ready",
        "local:\\s+http",
        "running at",
        "started server",
        "development server",
        "dev server running",
        "application ready"
      ],
      "build_complete": [
        "build complete",
        "compilation successful",
        "bundling complete",
        "assets generated"
      ],
      "error_patterns": [
        "error:",
        "exception:",
        "failed to",
        "cannot find",
        "module not found",
        "syntax error"
      ]
    }
  },
  "dashboard": {
    "enabled": "{{DASHBOARD_ENABLED}}",
    "title": "{{DASHBOARD_TITLE}}",
    "theme": "{{DASHBOARD_THEME}}",
    "logBuffer": "{{DASHBOARD_LOG_BUFFER}}",
    "autoScroll": "{{DASHBOARD_AUTO_SCROLL}}",
    "refreshInterval": "{{DASHBOARD_REFRESH_INTERVAL}}",
    "maxConnections": "{{DASHBOARD_MAX_CONNECTIONS}}",
    "authentication": {
      "enabled": "{{DASHBOARD_AUTH_ENABLED}}",
      "username": "{{DASHBOARD_USERNAME}}",
      "password": "{{DASHBOARD_PASSWORD}}"
    },
    "features": {
      "realTimeUpdates": "{{DASHBOARD_REAL_TIME}}",
      "downloadLogs": "{{DASHBOARD_DOWNLOAD_LOGS}}",
      "processControls": "{{DASHBOARD_PROCESS_CONTROLS}}",
      "systemMetrics": "{{DASHBOARD_SYSTEM_METRICS}}"
    }
  },
  "integrations": {
    "claude": {
      "enabled": "{{CLAUDE_INTEGRATION_ENABLED}}",
      "apiVersion": "{{CLAUDE_API_VERSION}}",
      "maxTokens": "{{CLAUDE_MAX_TOKENS}}"
    },
    "webhooks": {
      "enabled": "{{WEBHOOKS_ENABLED}}",
      "endpoints": "{{WEBHOOK_ENDPOINTS}}",
      "timeout": "{{WEBHOOK_TIMEOUT}}",
      "retries": "{{WEBHOOK_RETRIES}}"
    },
    "notifications": {
      "enabled": "{{NOTIFICATIONS_ENABLED}}",
      "channels": "{{NOTIFICATION_CHANNELS}}",
      "events": "{{NOTIFICATION_EVENTS}}"
    }
  },
  "development": {
    "debug": "{{DEBUG_MODE}}",
    "verboseLogging": "{{VERBOSE_LOGGING}}",
    "hotReload": "{{HOT_RELOAD}}",
    "profiling": "{{PROFILING_ENABLED}}",
    "mockData": "{{MOCK_DATA_ENABLED}}"
  },
  "backup": {
    "enabled": "{{BACKUP_ENABLED}}",
    "interval": "{{BACKUP_INTERVAL}}",
    "retention": "{{BACKUP_RETENTION}}",
    "compression": "{{BACKUP_COMPRESSION}}",
    "destination": "{{BACKUP_DESTINATION}}"
  }
}