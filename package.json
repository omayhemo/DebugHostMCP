{
  "name": "debug-host-mcp",
  "version": "1.0.0",
  "description": "Debug Host MCP Server - Real-time development server monitoring with Claude Code integration",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node src/index.js --debug",
    "service": "node service/global-service.js",
    "adapter": "node adapter/mcp-adapter.js",
    "cli": "node cli.js",
    "health-check": "node cli.js health-check",
    "generate-config": "node cli.js generate-config",
    "uninstall": "node cli.js uninstall",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit/ --testPathIgnorePatterns=integration|e2e|performance|security",
    "test:integration": "jest --testPathPattern=tests/integration/",
    "test:e2e": "jest --testPathPattern=tests/e2e/",
    "test:security": "jest --testPathPattern=tests/security/",
    "test:performance": "jest --testPathPattern=tests/performance/ --testTimeout=30000",
    "test:load": "jest --testPathPattern=tests/load/ --testTimeout=60000",
    "test:ui": "jest --testPathPattern=tests/ui/",
    "test:cross-platform": "jest --testPathPattern=tests/cross-platform/",
    "test:regression": "jest --testPathPattern=tests/regression/",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "jest --coverage --watchAll=false --ci --passWithNoTests",
    "test:ci-full": "npm run test:all && npm run test:security && npm run test:performance",
    "test:smoke": "jest --testPathPattern=tests/smoke/",
    "test:parallel": "jest --maxWorkers=50%",
    "test:comprehensive": "node tests/run-comprehensive-tests.js",
    "test:comprehensive:parallel": "node tests/run-comprehensive-tests.js --parallel",
    "test:comprehensive:fast": "node tests/run-comprehensive-tests.js --skip-heavy",
    "test:advanced-integration": "jest tests/integration/advanced-integration.test.js --testTimeout=120000",
    "test:comprehensive-load": "jest tests/load/comprehensive-load.test.js --testTimeout=300000",
    "test:deployment": "jest tests/deployment/production-deployment.test.js --testTimeout=120000",
    "test:epic24": "npm run test:comprehensive"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "node-pty": "^0.10.1",
    "portfinder": "^1.0.32",
    "uuid": "^9.0.0",
    "winston": "^3.8.2",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "artillery": "^2.0.0",
    "cross-env": "^7.0.3",
    "jest": "^29.5.0",
    "jest-circus": "^29.5.0",
    "jest-environment-node": "^29.5.0",
    "jest-extended": "^4.0.2",
    "jest-html-reporters": "^3.1.4",
    "jest-junit": "^16.0.0",
    "jest-performance-testing": "^1.0.0",
    "jest-websocket-mock": "^2.4.0",
    "mock-fs": "^5.2.0",
    "nock": "^13.4.0",
    "playwright": "^1.40.0",
    "portfinder": "^1.0.32",
    "puppeteer": "^21.6.1",
    "sinon": "^17.0.1",
    "supertest": "^7.1.4",
    "tmp": "^0.2.1",
    "wait-port": "^1.0.4",
    "ws-mock": "^0.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js",
      "<rootDir>/tests/extended-setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/**/*.config.js",
      "!src/**/*.mock.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "text-summary",
      "lcov",
      "html",
      "json",
      "clover"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      },
      "./src/mcp-tools.js": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      },
      "./src/dashboard/server.js": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "testTimeout": 10000,
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/coverage/",
      "/dist/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "verbose": true,
    "detectOpenHandles": true,
    "forceExit": false,
    "maxWorkers": "50%",
    "resetMocks": true,
    "restoreMocks": true,
    "clearMocks": true,
    "reporters": [
      "default",
      "jest-html-reporters",
      [
        "jest-junit",
        {
          "outputDirectory": "coverage",
          "outputName": "jest-junit.xml"
        }
      ]
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@tests/(.*)$": "<rootDir>/tests/$1"
    },
    "globalSetup": "<rootDir>/tests/global-setup.js",
    "globalTeardown": "<rootDir>/tests/global-teardown.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "debug",
    "server",
    "apm",
    "process-management"
  ],
  "author": "APM Framework",
  "license": "MIT"
}
