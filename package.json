{
  "name": "plopdock",
  "version": "2.0.0",
  "description": "PlopDock - Instant containerized development environments",
  "main": "src/mcp-stdio-server.js",
  "scripts": {
    "start": "node src/mcp-stdio-server.js",
    "dev": "node --watch src/mcp-stdio-server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=tests/integration"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "2": "^3.0.0",
    "@modelcontextprotocol/sdk": "^1.17.2",
    "cors": "^2.8.5",
    "dockerode": "^4.0.2",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "axios": "^1.11.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "roots": [
      "<rootDir>"
    ],
    "modulePathIgnorePatterns": [
      "archive-legacy-system",
      ".apm"
    ],
    "testTimeout": 10000
  },
  "keywords": [
    "plopdock",
    "docker",
    "containerization",
    "development",
    "instant-environments",
    "model-context-protocol"
  ],
  "author": "PlopDock Team",
  "license": "MIT"
}
